@model dynamic

@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/profile.css">

    <div id="stn" class="col-sm-5" style="border-left: 2px groove #505b65 !important;   background-color: #15202B !important;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <div id="ttlrow" class=row>

            <p style="color: white; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 19px; font-weight: 800; line-height: 25px; margin-left: 2rem; margin-top: 1rem;">Eda</p>

        </div>
        <div id="tt" class="row">
                <img id="arkaplanJpg" style="width:100%;height:30em;" src="~/images2/@ViewBag.BackgroundImg" />
                <img src="~/images/@ViewBag.ProfilePicture" alt="john doe" class="mr-3 ml-4 rounded-circle" style="width:150px;border:4px solid #15202B;margin-top:-8rem;">
                <form asp-action="EditProfile" method="get">
                    <button id="submit_button4">Profili Düzenle</button>
                </form>
        </div>
        <p style="font-size:19px;line-height:25px;font-weight:800;color:white;">@ViewBag.Name</p>
        <h4 style="font-size:15px;line-height:20px;font-weight:400;color:#8899a6">@ViewBag.UserName</h4>
        <p style="font-size:15px;line-height:20px;font-weight:400;color:white;"></p>
        <p style="font-size:15px;line-height:20px;font-weight:400;color:#8899a6 !important">
        <a asp-action="Followed" method="get">@ViewBag.followedCount Takip Edilen</a>
        <a asp-action="FollowerView" method="get">@ViewBag.followerCount Takipçi</a>
        </p>
        <div class="row">
            <ul class="nav nav-tabs-fluid" id="tbs" style="margin:0;">

                <li class="nav-item" style="width:10.2vw !important;">
                    <a asp-controller="Home" asp-action="Profile" style="display:none;">
                        <a style="font-size:15px;font-weight:700;line-height:20px;" class="nav-link active" data-toggle="pill" href="#">Tweetler</a>
                    </a>
                </li>

                <li class="nav-item" style="width:10.2vw !important;">
                    <a style="font-size:15px;font-weight:700;line-height:20px;" class="nav-link active" data-toggle="pill" href="#">Tweetler ve yanıtlar</a>
                </li>
                <li class="nav-item" style="width:10.1vw !important;">
                    <a style="font-size:15px;font-weight:700;line-height:20px;" class="nav-link active" data-toggle="pill" href="#">Medya</a>
                </li>
                <li class="nav-item" style="width:10.2vw !important;">
                        <a style="font-size:15px;font-weight:700;line-height:20px;" class="nav-link active" asp-controller="Home" asp-action="LikePage" asp-area="">Beğeni</a>
                </li>
                
            </ul>
        </div>
        
        @foreach (var item in @ViewBag.UserTwet)
        {
            <div class=row style="border-bottom: 1px groove #a5a9ac !important;border-left:1px groove #a5a9ac !important;">
                <div class="tweet-box-content">
                    <div class="tweetbox-user-icon-col">
                        <img src="~/images/@item.ProfilePicture" alt="John Doe" class="mr-3 mt-3 ml-4 rounded-circle" style="width:50px;height:50px;float:right !important;">
                    </div>

                    <div class="mt-3 tweetbox-message-content" style="width: 80% !important;color:white !important;">
                        <h4 style="font-size:15px;line-height:20px;font-weight:700;">@item.UserName</h4>
                        <form class="input-group">

                            <p style="font-size:15px;line-height:20px;font-weight:400;">@item.tweet</p>
                            <div id="ikonlar">
                                <ul class="nav nav-pills nav-pills-custom">
                                    <li>
                                        <span id="icn2">
                                            <i style=" margin-top:20px;
    font-size: 15px !important;
    color: grey !important;" class="far fa-comment"></i>
                                        </span>
                                    </li>
                                    <li>
                                        <span id="icn2">
                                            <i style=" margin-left:15rem;margin-top:20px;
    font-size: 15px !important;
    color: grey !important;" class="fas fa-retweet"></i>
                                        </span>

                                    </li>
                                    <li>
                                        <span id="icn2">
                                            <i style="margin-left:15rem;margin-top:20px;
    font-size: 15px !important;
    color: grey !important;" class="far fa-heart"></i>
                                        </span>

                                    </li>
                                    <li>
                                        <span id="icn2">
                                            <i style=" margin-left:15rem;margin-top:20px;
    font-size: 15px !important;
    color: grey !important;" class="far fa-share-square"></i>
                                        </span>

                                    </li>
                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

